<div class="background">
  <div class="container">
    <div class="row">
    </div>
    <div class="row">
      <div class="col s12 push-s2">
        <div id ='content' class="card-panel login">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'col s12') do |f| %>
            <div class="row">
            </div>
            <div class="row">
            </div>
            <div class="row">
            </div>
            <div class="row">
              <div class="col s12 push-s3">
                <span class='blue-grey-text text-lighten-3'>Good Morning!</span>
                <p></p>
                <span class='blue-grey-text text-lighten-3'>If you can dream it, you can do it.</span>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s6 push-s3">
                <%= f.email_field :email, class: "active validate", required: true %>
                <%= f.label :email %><br />
              </div>
            </div>
            <div class="row">
              <div class="input-field col s6 push-s3">
                <%= f.password_field :password, class: "validate", required: true %>
                <%= f.label :password %><br />
              </div>
            </div>
            <div class="row">
              <div class="col s6 push-s3">
                <button class="btn waves-effect waves-light" type="submit" name="action">Login
                </button>
              </div>
              <div class="col s6">
                <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'center-align teal-text' %>
              </div>
            </div>
            <div class="row">
            </div>
            <div class="row">
              <div class="col s6 push-s3">
                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>
              </div>
            </div>
            <div class="row">
            </div>
            <div class="row">
              <div class="col s12">
                <div class="card blue-grey lighten-5">
                  <div class="card-content black-text">
                    <p class="center-align">Don't have an account on Saksharta? <a href= "/users/sign_up" class="teal-text">Sign up. </a> </p>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
